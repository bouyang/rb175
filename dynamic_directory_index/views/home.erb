    <title>directory</title>

</head>

  <body>
    <h1>Files in public directory:</h1>
    <ul>
      <% @files.each do |file| %>
        <li><a href="/<%= file %>"><%= file %></a></li>
      <% end %>
    </ul>

    <a href="/">Sort Ascending</a>
    <a href="/?reverse=true">Sort Descending</a>
